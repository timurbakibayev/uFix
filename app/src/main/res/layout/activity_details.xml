<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kz.sagrad.ufix.DetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainLayout"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/item_detail"
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textIsSelectable="true"
                tools:context="com.gii.youfix.ItemDetailFragment" />

            <TextView
                android:id="@+id/form_city1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:drawableLeft="@drawable/ic_map_black_24dp"
                android:drawableTint="#FF4081"
                />

            <TextView
                android:id="@+id/form_name1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                android:drawableTint="#FF4081"
                />

            <TextView
                android:id="@+id/form_auto1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:drawableLeft="@drawable/ic_directions_car_black_24dp"
                android:drawableTint="#FF4081"
                />

            <TextView
                android:id="@+id/form_year1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:drawableLeft="@drawable/ic_insert_invitation_black_24dp"
                android:drawableTint="#FF4081"
                />

            <TextView
                android:id="@+id/form_phone1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:drawableTint="#FF4081"
                />

            <TextView
                android:id="@+id/form_description1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:drawableLeft="@drawable/ic_chat_bubble_outline_black_24dp"
                android:drawableTint="#FF4081"
                android:hint="Описание проблемы"
                android:inputType="textMultiLine"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/photos_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/priceLL">
            <Button
                android:id="@+id/button_make_offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:drawableLeft="@android:drawable/ic_menu_add"
                android:drawableTint="#FF4081"
                android:text="Предложить цену ремонта"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
