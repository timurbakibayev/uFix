<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:andriod="http://schemas.android.com/apk/res/android"
    andriod:layout_width="match_parent"
    andriod:layout_height="match_parent">

    <ImageView
        andriod:id="@+id/page"
        andriod:layout_width="match_parent"
        andriod:layout_height="wrap_content"
        andriod:gravity="center" />
    <TextView
        andriod:background="@color/lightSecondary"
        andriod:id="@+id/page_count"
        andriod:layout_marginRight="2dp"
        andriod:textColor="@color/colorSecondaryText"
        andriod:text="1/1"
        andriod:layout_marginLeft="16dp"
        andriod:layout_alignBottom="@id/page"
        andriod:layout_alignParentRight="true"
        andriod:layout_gravity="right"
        andriod:drawableLeft="@drawable/ic_camera_alt_black_24dp"
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content" />
</RelativeLayout>